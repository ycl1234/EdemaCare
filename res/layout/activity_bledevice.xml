<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ble_blackgroud" > 

    
    <TextView 
        android:id="@+id/ble_device_list_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ble_size_of_ble_item"
        android:text="@string/ble_device_list_name"
        android:textColor="#000000"
        android:textSize="16sp"
	/>
    
     <FrameLayout 
     	android:id="@+id/fragment_blelist"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/ble_size_of_ble_list" 
    	android:background="@color/ble_blackgroud"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp">
    	
 	</FrameLayout>
 	
     
  	<FrameLayout 
    android:id="@+id/fragment_scanbtn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ble_size_of_scan_button" 
    android:background="@color/ble_blackgroud">
 	</FrameLayout>
 	


</LinearLayout>

 
 
