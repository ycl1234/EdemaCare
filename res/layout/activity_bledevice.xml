<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/ble_blackgroud" > 

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="@dimen/ble_size_of_ble_item"
        android:orientation="horizontal"
		android:paddingLeft="40dp"
    	android:paddingTop="20dp"
    	android:background="@color/ble_blackgroud">
        
        <ImageView android:layout_width="10dp" 
            android:layout_height="18dp"
            android:background="@drawable/ble_title"
			android:layout_marginRight="24dp"/>
        
        
        <TextView 
        android:id="@+id/ble_device_list_name"
        android:layout_marginTop="-6dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/ble_device_list_name"
        android:textColor="#000000"
        android:textSize="20sp"
		/>
        
    </LinearLayout>
   
    <ImageView android:layout_width="match_parent" 
            android:layout_height="7dp"
            android:background="@drawable/ble_list_line_up"
           />
     <FrameLayout 
     	android:id="@+id/fragment_blelist"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/ble_size_of_ble_list" 
    	android:background="@color/ble_blackgroud"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp">
    	
 	</FrameLayout>
 	   
    <ImageView android:layout_width="match_parent" 
            android:layout_height="7dp"
            android:background="@drawable/ble_list_line_up"
            android:layout_marginTop="-5dp"
           />
     
  	<FrameLayout 
    android:id="@+id/fragment_scanbtn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ble_size_of_scan_button" 
    android:background="@color/ble_blackgroud">
 	</FrameLayout>
 	


</LinearLayout>

 
 
